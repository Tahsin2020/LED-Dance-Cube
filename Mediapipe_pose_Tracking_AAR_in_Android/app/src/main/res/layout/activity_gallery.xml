<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".GalleryActivity">

    <!-- create a ImageView and Gallery -->
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY" />

    <!-- By using android:spacing we can give spacing between images
        android:animationDuration="3000" -> for animation running -->
    <Gallery
        android:id="@+id/languagesGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:animationDuration="3000"
        android:padding="10dp"
        android:spacing="5dp"
        android:unselectedAlpha="50" />

    <Button
        android:id="@+id/button_gallery_1"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:text="@string/to_pick" />

</LinearLayout>
